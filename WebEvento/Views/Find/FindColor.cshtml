
@model WebEvento.ViewModel.InformationViewModel
@{
    ViewData["Title"] = "جستجو";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> رنگ ها</h2>

<table class="table table-striped table-bordered table-sm" id="dtBasicExample" cellspacing="0" width="100%">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Colors.ColorButton)</th>
            <th> @Html.DisplayNameFor(model => model.Colors.ColorFooter)</th>
            <th> @Html.DisplayNameFor(model => model.Colors.ColorHeader)</th>
            <th> @Html.DisplayNameFor(model => model.Colors.ColorSubContetntView)</th>
      

        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model.ColorList)
        {
        <tr class="active">
            <td>@item.ColorButton</td>
            <td>@item.ColorFooter</td>
            <td>@item.ColorHeader</td>
            <td>@item.ColorSubContetntView</td>
            <td>
                <a asp-action="EditColors" asp-route-id="@item.Id" asp-controller="Edit">ویرایش</a> |
              
                <a asp-action="DeleteColor" onclick = "return confirm('آیا از حذف آیتم مورد نظر اطمینان دارید؟'); " asp-route-id="@item.Id" asp-controller="Delete">حذف</a>
            </td>
        </tr>
                }
           
         

        </tbody>

</table>

<pioneer-pagination info="@ViewBag.PaginatedMeta" route="/blog" previous-page-text="hey" next-page-text="you"></pioneer-pagination>
@section Script{


    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>



}
