
@model WebEvento.ViewModel.InformationViewModel
@{
    ViewData["Title"] = "جستجو";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> آموزشی</h2>

<table class="table table-striped table-bordered table-sm" id="dtBasicExample" cellspacing="0" width="100%">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Eduction.Name)</th>
            <th> @Html.DisplayNameFor(model => model.Eduction.Type)</th>

        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model.EductionList)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Type.GetDisplayName()</td>
            <td>
                <a asp-action="EditEduction" asp-controller="Edit" asp-route-id="@item.Id">ویرایش</a> |

                <a asp-action="DeleteEduction" onclick = "return confirm('آیا از حذف آیتم مورد نظر اطمینان دارید؟'); " asp-controller="Delete" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>

                }
           
          

        </tbody>

</table>

<pioneer-pagination info="@ViewBag.PaginatedMeta" route="/blog" previous-page-text="hey" next-page-text="you"></pioneer-pagination>
@section Script{


    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>



}
