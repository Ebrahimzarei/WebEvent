

@model WebEvento.ViewModel.InformationViewModel
@{
    ViewData["Title"] = "جستجو";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> رویداد ها</h2>

<table class="table table-striped table-bordered table-sm" id="dtBasicExample" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event.TypeCaption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event.CaptionEvent)
            </th>






            <th>
                @Html.DisplayNameFor(model => model.Event.Payed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event.Tell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event.TimeEvent)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EventList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeCaption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaptionEvent)
            </td>






            <td>
                @Html.DisplayFor(modelItem => item.Payed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tell)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @foreach (var itemevent in Model.PeriodEventTime)
            {
        <td>
            <p>@itemevent</p>
        </td>

              
            }


            <td>
                <a asp-action="EditEvent" asp-controller="Edit" asp-route-id="@item.Id">ویرایش</a> |
                <a asp-action="Details" asp-route-id="@item.Id">بیشتر</a> |
                <a asp-action="DeleteEvent" asp-controller="Delete" onclick="return confirm('آیا از حذف آیتم مورد نظر اطمینان دارید؟'); " asp-route-id="@item.Id">حذف</a>|
                <a asp-action="Confirm" asp-controller="Find" asp-route-id="@item.Id" onclick="return confirm('آیا از تایید رویداد اطمینان دارید؟'); "  >تایید حهت ارسال </a>|
                <a asp-action="IsEdit" asp-controller="Find" asp-route-id="@item.Id">نیاز به ویرایش</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Script{


    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>



}
