@model WebEvento.ViewModel.InformationViewModel
@{
    ViewData["Title"] = "ویرایش آموزشی";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>ویرایش آموزش</h4>
<div>
    <div class="account-pages">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5">
                    <div class="card mb-0">
                        <div class="card-body">
                            <div class="p-2">
                                <form method="post" asp-antiforgery="true">

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group row" dir="rtl">
                                        <div class="col-12">
                                            <label asp-for="Eduction.Name" class="control-label" dir="rtl" style=" FLOAT: right"></label>
                                            <input asp-for="Eduction.Name" class="form-control form-control-success" />
                                            <span asp-validation-for="Eduction.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            <label asp-for="Eduction.Type" class="control-label" style=" FLOAT: right"></label>
                                            <select asp-for="Eduction.Type" class="form-control form-control-success">
                                                <option value="0">@WebEventoo_DomainClasses.Model.Eduction.TypeEduction.Cultrual.GetDisplayName()</option>
                                                <option value="1"> @WebEventoo_DomainClasses.Model.Eduction.TypeEduction.Sport.GetDisplayName()</option>
                                                <option value="2">@WebEventoo_DomainClasses.Model.Eduction.TypeEduction.Scientific.GetDisplayName()</option>

                                            </select>
                                            <span asp-validation-for="Eduction.Type" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-12">
                                            <input type="submit" value="ذخیره " class="btn btn-danger" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>









</div>

