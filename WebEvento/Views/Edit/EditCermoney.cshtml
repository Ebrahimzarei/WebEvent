@model WebEvento.ViewModel.InformationViewModel
@using WebEventoo_DomainClasses.Model;
@{
    ViewData["Title"] = "Exhibition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>ویرایش مراسم و همایش</h4>
<div>
    <div class="account-pages">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5">
                    <div class="card mb-0">
                        <div class="card-body">
                            <div class="p-2">
                                <form method="post" asp-antiforgery="true">

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group row" dir="rtl">
                                        <div class="col-12">
                                            <label asp-for="Cermoney.Name" class="control-label" dir="rtl" style=" FLOAT: right"></label>
                                            <input asp-for="Cermoney.Name" class="form-control form-control-success" />
                                            <span asp-validation-for="Cermoney.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            <label asp-for="Cermoney.Type" class="control-label" style=" FLOAT: right"></label>
                                            @*<input asp-for="Exhibition.Type" class="form-control" />*@
                                           
                                            <select asp-for="Cermoney.Type" class="form-control form-control-success">
                                                <option value="0">@Ceremony.TypeCermoney.Cultrul.GetDisplayName()</option>
                                                <option value="1"> @Ceremony.TypeCermoney.Sport.GetDisplayName()</option>
                                                <option value="2">@Ceremony.TypeCermoney.Sciences.GetDisplayName()</option>
                                                <option value="3">@Ceremony.TypeCermoney.Public.GetDisplayName()</option>

                                            </select>

                                            <span asp-validation-for="Cermoney.Type" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-12">
                                            <input type="submit" value="ذخیره " class="btn btn-danger" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>









</div>
