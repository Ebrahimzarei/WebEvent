

@model WebEvento.ViewModel.InformationViewModel
@{
    ViewData["Title"] = "تراکنش های ثبت شده";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (@ViewBag.Count == null)
{
    <h3>  تراکنش های ثبت شده  :  0   </h3>
}
else
{
    <h3>@ViewBag.Count; : تراکنش های ثبت شده </h3>

}









<table class="table table-striped table-bordered table-sm" id="dtBasicExample" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event.CaptionEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventResultBank.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventResultBank.ReasonEvent)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.EventResultBank.Price)
            </th>







        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Error == true)
        {

            @foreach (var item in Model.EventResultBankList)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event.CaptionEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReasonEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>





        </tr>
            }}
        @if (ViewBag.Error == false)

        {
            <tr>
                <td>
                    تراکنشی ثبت نشده است
                </td>
            </tr>
        }

    </tbody>
</table>

@section Script{


    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>



}
