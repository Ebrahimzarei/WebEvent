

@model WebEvento.ViewModel.InformationViewModel
@{
    ViewData["Title"] = "رویداد های امروز";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (@ViewBag.Count == null)
{
<h3>  رویداد های امروز  :  0   </h3>
}
else
{
<h3>@ViewBag.Count : رویداد های امروز </h3>

}


<table class="table table-striped table-bordered table-sm" id="dtBasicExample" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event.Type)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Event.CaptionEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event.TimeEvent)
            </th>








            <th>
                وضعیت
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Error == true)
        {

            @foreach (var item in Model.EventList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CaptionEvent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeEvent)
                    </td>

                    <td class="form-control btn-danger">
                        بررسی نشده
                    </td>


                    <td>
                        <a asp-action="EditEvent" asp-controller="Edit" asp-route-id="@item.Id">ویرایش</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">بیشتر</a> |
                        <a asp-action="DeleteEvent" asp-controller="Delete" onclick="return confirm('آیا از حذف آیتم مورد نظر اطمینان دارید؟'); " asp-route-id="@item.Id">حذف</a>|
                        <a asp-action="Delete" asp-route-id="@item.Id">تایید حهت ارسال </a>|
                        <a asp-action="Delete" asp-route-id="@item.Id">نیاز به ویرایش</a>
                    </td>
                </tr>
            }

        }
        @if (ViewBag.Error == false)
        {
            <tr>
                <td>رویدادی ثبت نشده است</td>
            </tr>
        }






    </tbody>
</table>

@section Script{


    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>



}
