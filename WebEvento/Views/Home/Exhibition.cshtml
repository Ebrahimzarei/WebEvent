@model WebEvento.ViewModel.InformationViewModel
@using WebEventoo_DomainClasses.Model;
@{
    ViewData["Title"] = "Exhibition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>نمایشگاه</h4>
<div>
    <div class="account-pages">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5">
                    <div class="card mb-0">
                        <div class="card-body">
                            <div class="p-2">
                                <form   asp-antiforgery="true">

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group row" dir="rtl">
                                        <div class="col-12">
                                            <label asp-for="Exhibition.Name" class="control-label" dir="rtl" style=" FLOAT: right"></label>
                                            <input asp-for="Exhibition.Name" class="form-control form-control-success" />
                                            <span asp-validation-for="Exhibition.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            <label asp-for="Exhibition.Type" class="control-label" style=" FLOAT: right"></label>
                                            @*<input asp-for="Exhibition.Type" class="form-control" />*@
                                            <select asp-for="Exhibition.Type" class="form-control form-control-success">
                                                <option value="0">@Exhibition.TypeExhbition.Cultrual.GetDisplayName()</option>
                                                <option value="1"> @Exhibition.TypeExhbition.Public.GetDisplayName()</option>
                                                <option value="2">@Exhibition.TypeExhbition.Religions.GetDisplayName()</option>
                                                <option value="3">@Exhibition.TypeExhbition.Scientific.GetDisplayName()</option>
                                                <option value="4">@Exhibition.TypeExhbition.Sport.GetDisplayName()</option>
                                                <option value="3">@Exhibition.TypeExhbition.Tourism.GetDisplayName()</option>
                                            </select>

                                            <span asp-validation-for="Exhibition.Type" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-12">
                                            <input type="submit" value="ذخیره " id="btnsave" class="btn btn-danger" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Script{
    <script type="text/javascript">
                $('#btnsave').click(function(evt) {
  evt.preventDefault();

  var payload = $('form').serialize();

  $.ajax({
    url: '@Url.Action("Exhibition", "Home")',
     type: 'POST',
     data: payload,
     success: function (result) {
         //success
       alert(result);
  
     },
     error: function (error) {
       //error
     }
  });
        });
    </script>
}
