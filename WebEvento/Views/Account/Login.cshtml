@model WebEvento.ViewModel.InformationViewModel
@using WebEventoo_DomainClasses.Model;
@{
    Layout = "~/Views/Shared/_Account.cshtml";
}

<div class="account-pages">

    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 offset-lg-1">
                <div class="text-left">
                    <div>
                        <a href="index-2.html" class="logo logo-admin"><img src="~/assets/images/small/img-5.jpg" height="80" alt="logo"></a>
                    </div>
                    <h5 class="font-14 text-muted mb-4">ایونتو - مرجع تعریف رویداد ها </h5>
                    <p class="text-muted mb-4">لطفا برای ورود نام کاربری و رمز عبور خود را وارد نمایید </p>

                    <h5 class="font-14 text-muted mb-4">اعلان ها :</h5>
                    <div>
                        <p><i class="mdi mdi-arrow-right text-primary mr-2"></i>با این مرجع میتوان از رویداد های شیراز مطلع شد</p>
                        <p><i class="mdi mdi-arrow-right text-primary mr-2"></i>با ورود میتوان رویداد های علمی مذهبی و .... را تعریف نمود</p>
                        <p><i class="mdi mdi-arrow-right text-primary mr-2"></i>رویداد های مذهبی و علمی ورزشی سخنرانی فست فود ها نمایشگاه ها و...</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="card mb-0">
                    <div class="card-body">
                        <div class="p-2">
                            <h4 class="text-muted float-right font-18 mt-4">ورود</h4>
                            <div>
                                <a href="index-2.html" class="logo logo-admin"><img src="~/assets/images/small/img-4.jpg" height="60" alt="logo"></a>
                            </div>
                        </div>

                        <div class="p-2">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form asp-antiforgery="true">

                                <div class="form-group row">
                                    <div class="col-12">
                                        <input class="form-control" asp-for="Users.UserName" type="text" required="" placeholder="نام کاربری">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-12">
                                        <input class="form-control" asp-for="Users.Password" type="password" required="" placeholder="رمز عبور">
                                    </div>
                                </div>



                                <div class="form-group text-center row m-t-20">
                                    <div class="col-12">
                                        <button class="btn btn-primary btn-block waves-effect waves-light" id="btnsave" type="submit">ورود</button>
                                    </div>
                                </div>

                                <div class="form-group m-t-10 mb-0 row">
                                    <div class="col-sm-7 m-t-20">
                                        <a asp-action="ForgetPassword" asp-controller="Account" class="text-muted"><i class="mdi mdi-lock"></i> فراموشی رمز عبور؟</a>
                                    </div>

                                    <div class="col-sm-5 m-t-20">
                                        <a asp-action="Register" class="text-muted" asp-controller="Account"><i class="mdi mdi-account-circle"></i> ایجاد حساب جدید</a>
                                    </div>
                                </div>
                                @*<div class="form-group m-t-10 mb-0 row" id="divconfirm"  >
                                    <div class="col-12 m-t-20 text-center">
                                        @Html.ActionLink("ورد به صفحه مدیریت", "Index", new { controller = "Home" }, new { target = "_blank" })

                                    </div>
                                </div>*@
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->
    </div>
</div>
@section Script{
    <script type="text/javascript">
                $('#btnsave').click(function(evt) {
                    evt.preventDefault();
                    
  var payload = $('form').serialize();


  $.ajax({
    url: '@Url.Action("Login", "Account")',
     type: 'POST',
     data: payload,
     success: function (result) {
         //success
         if (result.Succeeded) {
           //  $('#divconfirm').show();
             
             
              window.location.href = '/Home/Index';
         }
         if (result.Succeeded == false)
         {
               alert("نام کاربری یا رمز عبور اشتباه می باشد");
         }
      
         
     
 
 
       
        

     },
     error: function (error) {
       //error
   
     }
  });
        });
    </script>
}
